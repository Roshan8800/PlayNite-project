rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }

    // Videos: Public read for approved, restricted write
    match /videos/{videoId} {
      allow get: if resource.data.status == 'Approved';
      allow list: if true;
      allow create: if request.auth != null && request.resource.data.channelId == request.auth.uid;
      allow update: if request.auth != null && (
                      (resource.data.channelId == request.auth.uid && !(request.resource.data.status != resource.data.status)) || // Owners can update, but not change status
                      isAdmin() // Admins can update anything
                    );
      allow delete: if isAdmin();
    }

    // Categories: Public read, admin-only write
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Reports: Admin read/write, authenticated user create
    match /reports/{reportId} {
      allow read, write: if isAdmin();
      allow create: if request.auth != null && request.resource.data.reportedByUid == request.auth.uid;
    }

    // Users can read public profiles, but only write to their own. Admins can write to any.
    match /users/{userId} {
      allow read: if true;
      allow write: if isOwner(userId) || isAdmin();
    }

    // Users can fully control their own subcollections (history, likes, etc.)
    match /users/{userId}/{collection}/{documentId} {
        allow read, write: if isOwner(userId);
    }
  }
}
