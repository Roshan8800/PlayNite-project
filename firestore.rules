rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to videos and categories
    match /videos/{videoId} {
      allow read: if true;
      allow write: if request.auth != null; // Logged-in users can upload
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin(); // Only admins can manage categories
    }

    // Users can read and write their own data
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // Users can manage their own history, likes, and watch later lists
    match /users/{userId}/{collection}/{documentId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Helper functions
    function isAdmin() {
      return request.auth.token.role == "Admin";
    }
  }
}
