rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // By default, deny all reads and writes
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow public read access to approved videos and all categories
    match /videos/{videoId} {
      allow get: if resource.data.status == 'Approved';
      allow list: if true; // Allows querying but individual docs are still protected
      allow write: if request.auth != null && (request.resource.data.channelId == request.auth.uid || isAdmin());
    }

    match /categories/{categoryId} {
      allow read: if true;
      allow write: if isAdmin(); // Only admins can manage categories
    }
    
    match /reports/{reportId} {
      allow read, write: if isAdmin();
      allow create: if request.auth != null;
    }

    // Users can read and write their own data
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId || isAdmin();
    }

    // Users can manage their own history, likes, and watch later lists
    match /users/{userId}/{collection}/{documentId} {
        allow read, write: if request.auth.uid == userId;
    }
    
    // Helper functions
    function isAdmin() {
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'Admin';
    }
  }
}
